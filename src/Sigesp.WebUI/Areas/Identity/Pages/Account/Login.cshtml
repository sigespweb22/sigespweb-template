@page
@model LoginModel
@{
    ViewData["PageName"] = "login";
}

@section Header {
    <link rel="stylesheet" media="screen, print" href="~/css/fa-brands.css">
}

<div class="row">
    <div class="col col-md-6 col-lg-7 hidden-sm-down" style="margin-top: 50px">
        <h2 class="fs-xxl fw-500 text-white">
            Seja bem vindo ao <span class="fw-300 text-warning"><i>SigespWeb</i></span><p></p>
            <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60">
                Sistema de Segurança Pública voltado à gestão do <span class="fw-500 text-warning"><i>SISTEMA PRISIONAL</i><p></p>
            </small>
        </h2>
        <a href="#" class="fs-lg fw-500 text-white opacity-70">Leia mais &gt;&gt;</a>
        @* <div class="d-sm-flex flex-column align-items-center justify-content-center d-md-block">
            <div class="px-0 py-1 mt-5 text-white fs-nano opacity-50">
                Redes sociais indisponíveis - Substituir ícones
            </div>
            <div class="d-flex flex-row">
                <a href="#" class="mr-2 fs-xxl" style="color: #708fd0;">
                    <i class="fab fa-facebook-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl" style="color: #38A1F3">
                    <i class="fab fa-twitter-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl" style="color: #da4d51;">
                    <i class="fab fa-google-plus-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl" style="color: #459dcc;">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
        </div> *@
    </div>

    <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 ml-auto">
        <div class="text-center mb-3 d-sm-block d-md-none">
            <img src="/img/meu-reforco-1-mod.png" style="width: 90px" alt="Sigesp WebApp" aria-roledescription="logo">
        </div>
        <div class="h1 text-white mb-3 d-sm-block d-md-none text-center">Meu <span class="fw-300 text-warning"><i>Reforço</i></span></div>
        <div class="h1 text-white d-xsm-none d-md-block">Sigesp <span class="fw-300 text-warning"><i>Login</i></span></div>
        <div class="card p-4 rounded-plus bg-faded">
            <form id="js-login" method="post">            
                <div class="form-group">
                    <label class="form-label" asp-for="Input.Email">Usuário</label>
                    <input type="email" asp-for="Input.Email" class="form-control" placeholder="E-mail" value="" required="required" />
                    <span class="invalid-feedback" asp-validation-for="Input.Email">Desculpe, está incorreto.</span>
                    <div class="help-block">E-mail cadastrado em seu registro</div>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Input.Password">Senha</label>
                    <input type="password" asp-for="Input.Password" class="form-control" placeholder="Sua senha (mínimo de 6 caracteres)" value="" required="required" />
                    <span class="invalid-feedback" asp-validation-for="Input.Password">Desculpe, está incorreto.</span>
                    <div class="help-block">Senha cadastrada em seu registro</div>
                </div>
                
                @* <div class="form-group text-left">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="Input.RememberMe" />
                        <label class="custom-control-label" asp-for="Input.RememberMe">Lembre-me</label>
                    </div>
                </div> *@
                <div asp-validation-summary="All" class="alert alert-danger text-dark"></div>         
                <div class="row no-gutters">
                    @* <div class="col-lg-6 pr-lg-1 my-2">
                        <button type="submit" class="btn btn-info btn-block btn-lg">Entre com <i class="fab fa-google"></i></button>
                    </div> *@
                    <div class="col-lg-12 pl-lg-1 my-2">
                        <button id="js-login-btn" type="submit" 
                                style="background-color: #ffad00; color=#ffffff; border-color: #ffad00;" 
                                class="btn btn-danger btn-block btn-lg">Entrar</button>
                    </div>
                </div>            
                <div class="text-center">
                    <a asp-page="ForgotPassword" class="opacity-90">Esqueceu sua senha?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#js-logsin-btn").click(function (event) {
            // Fetch form to apply custom Bootstrap validation
            var form = $("#js-login");

            if (form[0].checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.addClass('was-validated');
            // Perform ajax submit here...
        });
    </script>
}
