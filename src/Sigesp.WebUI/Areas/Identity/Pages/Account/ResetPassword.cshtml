@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Altere sua senha";
}

<div class="row">
    <div class="col-xl-12">
        <div class="col-xl-12 text-warning">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-xl-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-white">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-white">Senha</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="help-block">Sua senha deve ter de 6 a 20 caracteres, conter ao menos uma letra maiúscula, um número, um caracter especial e não deve conter espaços.</div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="text-white">Confirme sua senha</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Trocar senha</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
