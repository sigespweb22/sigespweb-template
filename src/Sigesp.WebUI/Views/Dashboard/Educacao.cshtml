@section ScriptsBlock {
	<script src="~/js/dependency/moment/moment.js"></script>	
	<script src="~/js/miscellaneous/fullcalendar/fullcalendar.bundle.js"></script>
	<script src="~/js/statistics/sparkline/sparkline.bundle.js"></script>
	<script src="~/js/statistics/easypiechart/easypiechart.bundle.js"></script>
	<script src="~/js/statistics/flot/flot.bundle.js"></script>
	<script src="~/js/miscellaneous/jqvmap/jqvmap.bundle.js"></script>
	<script src="~/js/statistics/flot/flot.bundle.js"></script>
	<script src="~/js/statistics/chartjs/chartjs.bundle.js"></script>
	<script src="~/js/statistics/d3/d3.js"></script>
	<script src="~/js/statistics/c3/c3.js"></script>
	
	<script>
		var colors = [
			color.success._500,
			color.danger._500
		];

		var colorsIAdesao = [
			color.warning._500,
			color.info._500
		];

		var colorsIEscolaridadeAlunos = [
			color.fusion._700,
			color.success._700, 
			color.danger._700,
			color.warning._700,
			color.info._700
		];

		var colorsIConceitoAvaliacao = [
			color.info._700,
			color.success._700, 
			color.warning._700,
			color.danger._900,
			color.danger._700
		];

		var pieChart = c3.generate({
			bindto: "#pieChart",
			data: {
				columns: [
					['ATIVOS', @Model.ChartAcervoLiterario.AtivosP.Replace("%", "")],
					['INATIVOS', @Model.ChartAcervoLiterario.InativosP.Replace("%", "")]
				],
				type : 'pie'
			},
			color: {
				pattern: colors
			}
		});

		var iAdesao = c3.generate({
			bindto: "#iAdesao",
			data: {
				columns: [
					['PARTICIPANTES', @Model.ChartIndiceAdesaoProjetoLeitura.ParticipantesP.Replace("%", "")],
					['NÃO PARTICIPANTES', @Model.ChartIndiceAdesaoProjetoLeitura.NaoParticipantesP.Replace("%", "")]
				],
				type : 'pie'
			},
			color: {
				pattern: colorsIAdesao
			}
		});

		var iEscolaridadeAlunos = c3.generate({
			bindto: "#iEscolaridadeAlunos",
			data: {
				columns: [
					['NÃO INFORMADO', @Model.ChartIndiceEscolaridadeAlunos.NaoInformadoP.Replace("%", "")],
					['FUNDAMENTAL I', @Model.ChartIndiceEscolaridadeAlunos.EnsinoFundamentalIP.Replace("%", "")],
					['FUNDAMENTAL II', @Model.ChartIndiceEscolaridadeAlunos.EnsinoFundamentalIIP.Replace("%", "")],
					['MÉDIO', @Model.ChartIndiceEscolaridadeAlunos.EnsinoMedioP.Replace("%", "")],
					['SUPERIOR', @Model.ChartIndiceEscolaridadeAlunos.EnsinoSuperiorP.Replace("%", "")]
				],
				type : 'pie'
			},
			color: {
				pattern: colorsIEscolaridadeAlunos
			}
		});

		var iConceitoAvaliacao = c3.generate({
			bindto: "#iConceitoAvaliacao",
			data: {
				columns: [
					['PENDENTE', @Model.ChartIndiceAvaliacaoConceito.PendenteP.Replace("%", "")],
					['APROVADO', @Model.ChartIndiceAvaliacaoConceito.AprovadoP.Replace("%", "")],
					['INSUFICIENTE', @Model.ChartIndiceAvaliacaoConceito.InsuficienteP.Replace("%", "")],
					['DESISTÊNCIA', @Model.ChartIndiceAvaliacaoConceito.DesistenciaP.Replace("%", "")],
					['NÃO CUMPRIMENTO', @Model.ChartIndiceAvaliacaoConceito.NaoCumprimentoP.Replace("%", "")]
				],
				type : 'pie'
			},
			color: {
				pattern: colorsIConceitoAvaliacao
			}
		});

		var down = function() {
			$('html, body').animate({ 
				scrollTop: $('#chart-end').offset().top 
			}, 500);
			up();
		};

		var up = function() {
			$('html, body').animate({ 
				scrollTop: $('#chart-start').offset().top
			}, 500);
			down();
		};

		var scrollAutomatic = function () {
			var posicaoAtualScroll = this.scrollY;

			if (posicaoAtualScroll <= 548 && posicaoAtualScroll != 0)
			{
				$("html, body").animate({ 
					scrollTop: "0px" 
				}, 10000);

				posicaoAtualScroll = 0;
			}
			else if (posicaoAtualScroll == 0)
			{
				$("html, body").animate({
					scrollTop: "1600px"
				}, 10000);
			} else if (posicaoAtualScroll <= 648 && posicaoAtualScroll != 0)
			{
				$("html, body").animate({ 
					scrollTop: "0px"
				}, 10000);
				posicaoAtualScroll = 1600;
			}
		};
		
		$(document).ready(function() {
			// automatic scroll inative
			@* setInterval(function () {
				scrollAutomatic();
			}, 15000); *@
		});

	</script>
}