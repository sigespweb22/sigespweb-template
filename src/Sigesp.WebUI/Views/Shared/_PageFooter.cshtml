@if (Settings.Features.AppFooter)
{
<footer class="page-footer" role="contentinfo">
	<div class="d-flex align-items-center flex-1 text-muted">
		<span class="hidden-md-down fw-700" id="owner-content"></span>
	</div>
	<div>
		<ul class="list-table m-0">
			<li><a href="#" class="text-secondary fw-700">Sobre</a></li>
			<li class="pl-3"><a href="#" class="text-secondary fw-700">Documentação</a></li>
		</ul>
	</div>
</footer>

<script>
	var data = new Date();
    var primeiroDiaAnoCompleto = new Date(data.getFullYear(), 0);
    var ac = primeiroDiaAnoCompleto.getFullYear();

	$("#owner-content").html(ac + " &copy; @Settings.App v@(Settings.Version)");
</script>
}